      <article class="content">
        <slot />
      </article>
    </main>

    <footer
      class="container"
      style="margin-top: 4rem; padding-top: 2rem; padding-bottom: 2rem; border-top: 1px solid var(--border); color: var(--text-muted); font-size: 0.9rem;"
