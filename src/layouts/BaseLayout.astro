---
import "../styles/global.css";

interface Props {
  frontmatter: {
    title: string;
  };
}

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro Vault - Digital Garden" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title}</title>
  </head>
  <body>
    <header
      class="container"
      style="padding-top: 2rem; padding-bottom: 2rem; border-bottom: 1px solid var(--border);"
    >
      <nav>
        <a
          href="/"
          style="font-weight: bold; font-size: 1.2rem; color: var(--text-normal);"
          >ðŸŒ± Astro Vault</a
        >
      </nav>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer
      class="container"
      style="margin-top: 4rem; padding-top: 2rem; padding-bottom: 2rem; border-top: 1px solid var(--border); color: var(--text-muted); font-size: 0.9rem;"
    >
      <p>Built with Astro & Obsidian</p>
    </footer>
  </body>
</html>
