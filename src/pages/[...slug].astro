---
import type { CollectionEntry } from "astro:content";
import { getCollection, render } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const contentEntries = await getCollection("content", ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
  });

  return contentEntries.map((entry: CollectionEntry<"content">) => ({
    params: { slug: entry.id === "index" ? undefined : entry.id },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<"content">;
}

const { entry } = Astro.props;
const { Content } = await render(entry);

// Layout Mapping
const layouts = {
  base: BaseLayout,
  landing: BaseLayout, // Placeholder for now
  minimal: BaseLayout, // Placeholder for now
};

const Layout = layouts[entry.data.layout] || BaseLayout;
---

<Layout title={entry.data.title || entry.id}>
  <article>
    <h1>{entry.data.title || entry.id}</h1>
    <Content />
  </article>
</Layout>
